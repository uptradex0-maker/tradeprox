<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposit - TradePro</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #0d1421, #1e2329);
            color: white;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 500px;
            margin: 0 auto;
            background: rgba(30, 35, 41, 0.9);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .header h1 {
            color: #f0b90b;
            font-size: 24px;
            margin-bottom: 10px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            color: #848e9c;
            font-size: 14px;
        }
        
        input {
            width: 100%;
            padding: 12px;
            background: #2b2f36;
            border: 1px solid #3c4043;
            border-radius: 6px;
            color: white;
            font-size: 16px;
            outline: none;
        }
        
        input:focus {
            border-color: #f0b90b;
        }
        
        .btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #f0b90b, #d4a017);
            color: #0d1421;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 10px;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(240, 185, 11, 0.3);
        }
        
        .btn-secondary {
            background: #39424e;
            color: white;
        }
        
        .qr-section {
            text-align: center;
            margin: 20px 0;
            padding: 20px;
            background: rgba(43, 47, 54, 0.5);
            border-radius: 8px;
        }
        
        .qr-code {
            max-width: 200px;
            height: auto;
            margin: 10px 0;
        }
        
        .success {
            background: #02c076;
            color: white;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 20px;
            display: none;
        }
        
        .error {
            background: #f84960;
            color: white;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 20px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Deposit Money</h1>
            <p style="color: #848e9c;">Add funds to your trading account</p>
            <div style="background: #2b2f36; padding: 15px; border-radius: 8px; margin: 20px 0; text-align: center;">
                <h3 style="color: #f0b90b; margin-bottom: 10px;">Current Balance</h3>
                <div style="display: flex; justify-content: space-around;">
                    <div>
                        <p style="color: #848e9c; font-size: 12px;">Demo Account</p>
                        <p style="color: #02c076; font-size: 18px; font-weight: bold;" id="demoBalance">₹50,000</p>
                    </div>
                    <div>
                        <p style="color: #848e9c; font-size: 12px;">Real Account</p>
                        <p style="color: #f0b90b; font-size: 18px; font-weight: bold;" id="realBalance">₹0</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="success" class="success"></div>
        <div id="error" class="error"></div>
        
        <div class="qr-section">
            <h3 style="color: #f0b90b; margin-bottom: 10px;">Scan QR Code to Pay</h3>
            <div id="qrContainer">
                <p style="color: #848e9c;">Loading QR code...</p>
            </div>
        </div>
        
        <form id="depositForm">
            <div class="form-group">
                <label for="amount">Amount (₹)</label>
                <input type="number" id="amount" name="amount" required min="100" placeholder="Minimum ₹100">
            </div>
            
            <div class="form-group">
                <label for="utr">UTR/Transaction ID</label>
                <input type="text" id="utr" name="utr" required placeholder="Enter UTR after payment">
            </div>
            
            <button type="submit" class="btn">Submit Deposit Request</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/'">Back to Trading</button>
        </form>
    </div>

    <script>
        // Load QR code
        async function loadQRCode() {
            try {
                const response = await fetch('/api/qr-code');
                const result = await response.json();
                
                const qrContainer = document.getElementById('qrContainer');
                if (result.success && result.qrCode) {
                    qrContainer.innerHTML = `<img src="${result.qrCode}" alt="Payment QR Code" class="qr-code">`;
                } else {
                    qrContainer.innerHTML = '<p style="color: #848e9c;">QR code not available. Contact admin.</p>';
                }
            } catch (error) {
                console.error('Error loading QR code:', error);
                document.getElementById('qrContainer').innerHTML = '<p style="color: #f84960;">Failed to load QR code</p>';
            }
        }
        
        // Handle deposit form
        document.getElementById('depositForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const amount = document.getElementById('amount').value;
            const utr = document.getElementById('utr').value;
            const userId = localStorage.getItem('tradepro_username');
            const errorDiv = document.getElementById('error');
            const successDiv = document.getElementById('success');
            
            errorDiv.style.display = 'none';
            successDiv.style.display = 'none';
            
            if (!userId) {
                errorDiv.textContent = 'Please login first';
                errorDiv.style.display = 'block';
                return;
            }
            
            try {
                const response = await fetch('/api/deposit-request', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId, amount, utr })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    successDiv.textContent = result.message;
                    successDiv.style.display = 'block';
                    document.getElementById('depositForm').reset();
                } else {
                    errorDiv.textContent = result.message;
                    errorDiv.style.display = 'block';
                }
            } catch (error) {
                errorDiv.textContent = 'Deposit request failed. Please try again.';
                errorDiv.style.display = 'block';
            }
        });
        
        // Load balance and QR code on page load
        loadUserBalance();
        loadQRCode();
        
        // Load user balance
        async function loadUserBalance() {
            try {
                const userId = localStorage.getItem('tradepro_username');
                if (!userId) return;
                
                const response = await fetch(`/api/balance/${userId}`);
                const result = await response.json();
                
                if (result.success) {
                    document.getElementById('demoBalance').textContent = `₹${result.demoBalance.toLocaleString()}`;
                    document.getElementById('realBalance').textContent = `₹${result.realBalance.toLocaleString()}`;
                }
            } catch (error) {
                console.error('Error loading balance:', error);
            }
        }
    </script>
</body>
</html>